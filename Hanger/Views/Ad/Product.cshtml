@model Hanger.Models.Ad

@{
    ViewBag.Title = "Product";
}
@Styles.Render("~/css/style.css")

@Styles.Render("~/css/contact.css")

<style>
    nav {
    display:inline-block;
    vertical-align: middle;
    width:150px;
    }
